@page
@model TicketPlace2._0.Areas.Admin.Pages.Statistique.Index

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.EvenementModel[0].Espace)</th>
            <th>@Html.DisplayNameFor(model => model.EvenementModel[0].Nom)</th>
            <th>@Html.DisplayNameFor(model => model.EvenementModel[0].Description)</th>
            <th>@Html.DisplayNameFor(model => model.EvenementModel[0].Date)</th>
            <th>@Html.DisplayNameFor(model => model.EvenementModel[0].Heure)</th>
            <th>@Html.DisplayNameFor(model => model.EvenementModel[0].Lieu)</th>
            <th>@Html.DisplayNameFor(model => model.EvenementModel[0].ImagePath)</th>
            <th>@Html.DisplayNameFor(model => model.EvenementModel[0].OnCreate)</th>
            <th>@Html.DisplayNameFor(model => model.EvenementModel[0].OnUpdate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.EvenementModel) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Espace.Nom)</td>
            <td>@Html.DisplayFor(modelItem => item.Nom)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td>@Html.DisplayFor(modelItem => item.Date)</td>
            <td>@Html.DisplayFor(modelItem => item.Heure)</td>
            <td>@Html.DisplayFor(modelItem => item.Lieu)</td>
            <td>@Html.DisplayFor(modelItem => item.ImagePath)</td>
            <td>@Html.DisplayFor(modelItem => item.OnCreate)</td>
            <td>@Html.DisplayFor(modelItem => item.OnUpdate)</td>
            <td>
                <a asp-page="./Detail" asp-route-evenementId="@item.Id">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    Page @(Model.CurrentPage) of @(Model.TotalPages)

    @if (Model.CurrentPage > 1)
    {
        <a asp-page="./Index" asp-route-currentPage="@(Model.CurrentPage - 1)">Previous</a>
    }

    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a asp-page="./Index" asp-route-currentPage="@(Model.CurrentPage + 1)">Next</a>
    }
</div>